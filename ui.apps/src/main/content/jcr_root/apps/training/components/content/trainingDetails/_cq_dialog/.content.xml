<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            xtype="tabpanel">
            <trainingInfo
                jcr:primaryType="nt:unstructured"
                jcr:title="Training Information"
                sling:resourceType="granite/ui/components/foundation/section">
                <items jcr:primaryType="nt:unstructured">
                    <trainingTitle
                        jcr:primaryType="nt:unstructured"
                        jcr:title="trainingTitle"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Title: "
                        name="./jcr:trainingTitle"/>
                    <trainingType
                        jcr:primaryType="nt:unstructured"
                        jcr:title="trainingType"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Training Type:"
                        name="./jcr:trainingType"/>
                    <date
                        jcr:primaryType="nt:unstructured"
                        jcr:title="trainingDate"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="When:"
                        name="./jcr:trainingDate"/>
                    <venue
                        jcr:primaryType="nt:unstructured"
                        jcr:title="location"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Location:"
                        name="./jcr:location"/>
                    <trainingDescription
                        jcr:primaryType="nt:unstructured"
                        jcr:title="description"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Description:"
                        name="./jcr:trainingDescription"/>
                </items>
            </trainingInfo>
            <promotional
                jcr:primaryType="nt:unstructured"
                jcr:title="Training Information"
                sling:resourceType="granite/ui/components/foundation/section">
                <items jcr:primaryType="nt:unstructured">
                    <promoHeader
                        jcr:primaryType="nt:unstructured"
                        jcr:title="promoHeader"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Promotional header text:"
                        name="./jcr:promoHeader"/>
                    <promoDescription
                        jcr:primaryType="nt:unstructured"
                        jcr:title="promoDescription"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Promotional description:"
                        name="./jcr:promoDescription"/>
                </items>
            </promotional>
        </items>
    </content>
</jcr:root>
